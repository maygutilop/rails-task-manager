<div class="container">
  <h1>
    <%= @task.title %>
  </h1>
  <div class="task-details">
    <%= @task.details %>
  </div>
  <p>
    <% if @task.completed %>
      <i class="far fa-check-square"></i> This task is completed.
    <% else %>
      <i class="far fa-square"></i> This task is not completed yet.
    <% end %>
  </p>
  <%= link_to "Back to list", tasks_path %>
  <%= link_to "Edit task", edit_task_path %>
  <%= link_to "Delete #{@task.title}", task_path(@task), method: :delete,
  data: { confirm: "Are you sure?"} %>
</div>
